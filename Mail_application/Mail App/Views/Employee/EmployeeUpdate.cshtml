@model APP.Models.UserInput
@{
    Layout = "../Shared/HomeLayout";
}

<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/EmployeeUpdate.cshtml.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
    @* <title>Document</title> *@
</head>

<body style="background: rgb(153,16,180);
background: linear-gradient(320deg, rgba(153,16,180,1) 0%, rgba(246,237,242,1) 0%, rgba(183,103,224,1) 100%);">
    <form asp-action="Updateprofile" asp-controller="Admin" method="Post">
        <div class="row" style="font-family: 'Poppins';">
            <div class="col-md-3 border-right">

                <div class="profile-pic">
                    <label class="-label" for="file">
                    </label>
                   
                    <img src="../../img/User.png" id="output" width="200" />
                </div>
            </div>
            <div class="col-md-5 border-right">
                <div class="p-3 py-5">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h4 class="text-right">Profile Settings</h4>
                    </div>
                    <div class="row mt-2">
                        <div class="col-md-6"><label class="labels">Name<a style="color:red;">*</a></label><input type="text" class="form-control"
                                placeholder="first name"  style="background-color: rgb(170, 170, 170);" asp-for="UserName" readonly></div>
                        <div class="col-md-6"><label class="labels">Surname<a style="color:red;">*</a></label><input type="text"
                                class="form-control" placeholder="surname"  style="background-color: rgb(170, 170, 170);" asp-for="SurName" readonly></div>
                    </div>
                    <div class="row mt-2">
                        <div class="col-md-12"><label class="labels">Mobile Number</label><input type="Number"
                                class="form-control" placeholder="enter phone number" asp-for="MobileNumber"></div>
                        <div class="col-md-12"><label class="labels">Personal Email</label><input type="email"
                                class="form-control" placeholder="Email" asp-for="PersonalEmail"></div>
                        <div class="col-md-12"><label  class="labels">Company Email<a style="color:red;">*</a></label><input type="email"
                                class="form-control" placeholder="Email"  style="background-color: rgb(170, 170, 170);" asp-for="Email" readonly></div>
                        <div class="col-md-6"><label class="labels">Role</label><input type="text" class="form-control"
                                placeholder="Role" asp-for="Role"></div>
                        <div class="col-md-6"><label class="labels">Employee ID<a style="color:red;">*</a></label><input type="text"
                                class="form-control" placeholder="Role"  style="background-color: rgb(170, 170, 170);" asp-for="EmployeeID" readonly></div>
                                <div class="col-md-6"><label class="labels">Password</label><input type="text"
                                class="form-control" placeholder="********" asp-for="Password" readonly></div>
                        <div class="col-md-6"><label class="labels">Confirm Password</label><input type="text"
                                class="form-control" placeholder="********" asp-for="Confirmpassword" readonly></div>
                        
                    </div>


                </div>
            </div>
            <div class="col-md-4">
                <div class="p-3 py-5">
                    <div class="d-flex justify-content-between align-items-center experience">
                        <span>EditExperience</span>
                    </div>
                    <br>

                    <div class="col-md-12"><label class="labels">Project</label><input type="text" class="form-control"
                            placeholder="experience" asp-for="Project"></div> <br>
                    <div class="mt-0 col-md-12"><label class="labels">Role in Project</label><input type="text"
                            class="form-control" placeholder="additional details" asp-for="Role_Project"></div>

                    <div class="mt-3 col-md-12"><label class="labels">Reset Password Key<a style="color:red;">*</a></label>
                     <p class="reset_password">Make Sure to save this key. If You're forgot the password use this key to change the password</p><input type="text"
                            class="form-control" placeholder="additional details" asp-for="Reset_Key" readonly></div>
                        <br>

                       
                </div>
            </div>
            @* <td><a asp-action="Updateprofile" asp-controller="Admin"><button class="button">Edit</button></a></td> *@
            <div class="mt-0 text-center"><button class="btn btn-primary profile-button"
                    style="background-color:rgb(193, 9, 199) ;" onclick="myFunction()">SaveProfile</button></div>
        </div>

        <p id="demo"></p>
        <script>
            function myFunction() {
                let text = "are you sure you want to change?";
                if (confirm(text) == true) {
                    window.location.href = "Dashboard.cshtml";
                } 
                document.getElementById("demo").innerHTML = Window.location.href;
            }
        </script>

    </form>

</body>

</html>