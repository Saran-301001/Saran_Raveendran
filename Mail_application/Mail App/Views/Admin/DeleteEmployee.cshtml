@{
    Layout = "../Shared/HomeLayout";
}


@model APP.Models.UserInput;

<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/Viewprofile.cshtml.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
    <title>Document</title>
</head>

<body style="background: rgb(153,16,180);
background: linear-gradient(320deg, rgba(153,16,180,1) 0%, rgba(246,237,242,1) 0%, rgba(183,103,224,1) 100%);">
    <form asp-action="Delete" asp-controller="Admin" asp-route-id="@ViewBag.Email" method="Post">
        <div class="row" style="font-family: 'Poppins';">
            <div class="col-md-3 border-right">

                <div class="profile-pic">
                    <label class="-label" for="file">
                        <span class="glyphicon glyphicon-camera"></span>
                        <span>Change Image</span>
                    </label>
                    <input id="file" type="file" onchange="loadFile(event)" />
                    <img src="../../img/User.png" id="output" width="200" />
                </div>
            </div>
            <div class="col-md-5 border-right">
                <div class="p-3 py-5">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h4 class="text-right">Profile Settings</h4>
                    </div>
                    <div class="row mt-2">
                        <div class="col-md-6"><label class="labels">Name</label><input type="text" class="form-control"
                                placeholder="first name" asp-for="UserName" readonly></div>
                        <div class="col-md-6"><label class="labels">Surname</label><input type="text"
                                class="form-control" placeholder="surname" asp-for="SurName" readonly></div>
                    </div>
                    <div class="row mt-2">
                        <div class="col-md-12"><label class="labels">Mobile Number</label><input type="Number"
                                class="form-control" placeholder="enter phone number" asp-for="MobileNumber" readonly></div>
                        <div class="col-md-12"><label class="labels">Personal Email</label><input type="email"
                                class="form-control" placeholder="Email" asp-for="PersonalEmail" readonly></div>
                        <div class="col-md-12"><label class="labels">Company Email</label><input type="email"
                                class="form-control" placeholder="Email" asp-for="Email" readonly></div>
                        <div class="col-md-6"><label class="labels">Role</label><input type="text" class="form-control"
                                placeholder="Role" asp-for="Role" readonly></div>
                        <div class="col-md-6"><label class="labels">Employee ID</label><input type="text"
                                class="form-control" placeholder="Role" asp-for="EmployeeID" readonly></div>
                        <div class="col-md-6"><label class="labels">Password</label><input type="password"
                                class="form-control" placeholder="**********" asp-for="Password" readonly></div>
                        <div class="col-md-6"><label class="labels">Confirm Password</label><input type="password"
                                class="form-control" placeholder="***********" asp-for="Confirmpassword" readonly></div>
                    </div>


                </div>
            </div>
            <div class="col-md-4">
                <div class="p-3 py-5">
                    <div class="d-flex justify-content-between align-items-center experience">
                        <span>EditExperience</span>
                    </div>
                    <br>

                    <div class="col-md-12"><label class="labels">Project</label><input type="text" class="form-control"
                            placeholder="experience" asp-for="Project" readonly></div> <br>
                    <div class="col-md-12"><label class="labels">Role in Project</label><input type="text"
                            class="form-control" placeholder="additional details" asp-for="Role_Project" readonly></div>
                </div>
            </div>
            @* <td><a asp-action="Updateprofile" asp-controller="Admin"><button class="button">Edit</button></a></td> *@
            <div class="mt-0 text-center"><button class="btn btn-primary profile-button"
                    style="background-color:rgb(193, 9, 199) ;" onclick="myFunction()">Delete</button></div>
        </div>

        <p id="demo"></p>
        <script>
            function myFunction() {
                let text = "Press a button!\nEither OK or Cancel.";
                if (confirm(text) == true) {
                    window.location.href = "Dashboard.cshtml";
                } else {
                    window.location.href = "ViewProfile.cshtml";
                }
                document.getElementById("demo").innerHTML = Window.location.href;
            }
        </script>

    </form> 

</body>

</html>